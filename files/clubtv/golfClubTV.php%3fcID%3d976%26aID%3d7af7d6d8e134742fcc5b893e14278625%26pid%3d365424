        <script type="text/javascript">
            var version = deconcept.SWFObjectUtil.getPlayerVersion()["major"];
            var rVersion = 9;
            
            if (version < rVersion) {
				
                var txt = '<b>Der Flashplayer ab Version 9 wurde nicht gefunden.</b> ';
                txt += '<br /><br />Bitte installieren Sie den aktuellen Flashplayer und rufen die Seite erneut auf.<br/><br/>';
                txt += '<a href="http://www.adobe.com/shockwave/download/download.cgi?P1_Prod_Version=ShockwaveFlash" target="_blank">Jetzt herunterladen und installieren</a><br />';
                
                var textDiv = document.getElementById('app');
				textDiv.style.left = 10;
				textDiv.style.top = 100;
				textDiv.innerHTML = txt;
				
            } else {

                writeFlashContent();
				
            }
            
        </script>
		
       
       
