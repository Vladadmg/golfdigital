        <script type="text/javascript">
            
            function writeFlashContent()
			{
                var so = new SWFObject("vod_player.swf", "video", "746", "400", "9", "#4e5b25");
                so.addParam("allowFullScreen", "true");
                so.addVariable("cID", "976");
		so.addVariable("affiliate", "7af7d6d8e134742fcc5b893e14278625");
		so.addVariable("pid", "365424");
                so.write("app");
            }
			
			function showBanner()
			{
				var so = new SWFObject("banner/clubtv_banner.swf", "banner", "746", "154", "9", "#4e5b25");
                so.addParam("menu", "false");
                so.addParam("allowFullScreen", "false");
		    so.addVariable("affiliate", "7af7d6d8e134742fcc5b893e14278625");
                so.write("banner");
			}
            
